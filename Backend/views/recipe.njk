{% extends "layout.njk" %}

{% block content %}
<div class="content">
   <section class="top">

       {% for item in items %}
            <div class="card-recipe" id="{{item.id}}">
                <div class="img-card">
                    <img src="{{item.image}}" alt="Imagem de {{item.title}}">
                </div>
                <div class="text-card">
                    <a href="/recipeDetail?id={{item.id}}">
                        <h3>{{item.title}}</h3>
                    </a>
                    <p> por {{item.author}}</p>
                </div>
            </div>
        {% endfor %}
    </section>
</div>

<script src="/scripts.js"></script>
{% endblock %}