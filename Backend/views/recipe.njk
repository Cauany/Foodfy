{% extends "layout.njk" %}

{% block style %}
    <link rel="stylesheet" href="/styles/recipe.css">
{% endblock style %}

{% block header %}
    <div class="logo">
        <a href="/">
            <img src="/assets/logo.png" alt="Logo Foodfy">
        </a> 
    </div>

    <nav class="main">
        <ul>
            <li>
                <a href="/about"> Sobre </a>
            </li>
            <li>
                <a href="/recipe"> Receitas </a>
            </li>
        </ul>
    </nav>
{% endblock header %}

{% block content %}
<div class="content">
   <section class="top">

       {% for item in items %}
            <div class="card-recipe" id="{{item.id}}">
                <div class="img-card">
                    <img src="{{item.image}}" alt="Imagem de {{item.title}}">
                </div>
                <div class="text-card">
                    <a href="/recipeDetail?id={{item.id}}">
                        <h3>{{item.title}}</h3>
                    </a>
                    <p> por {{item.author}}</p>
                </div>
            </div>
        {% endfor %}
    </section>
</div>

<script src="/scripts.js"></script>
{% endblock %}